{
  "configurations": [
    {
      "name": "Mac",
      "includePath": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/lib",
        "${workspaceFolder}/lib/**",
        "/opt/homebrew/include",  // Homebrew-installed headers like OpenSSL
        "/Library/Developer/CommandLineTools/usr/lib/clang/17/include"  // Clang internal headers
      ],
      "defines": [],
      "macFrameworkPath": [
        "/System/Library/Frameworks",
        "/Library/Frameworks"
      ],
      "compilerPath": "/usr/bin/clang",
      "cStandard": "c17",
      "cppStandard": "c++23",
      "intelliSenseMode": "macos-clang-arm64"
    }
  ],
  "version": 4
}
